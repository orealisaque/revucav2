{
    "version": 2,
    "builds": [
        {
            "src": "config/wsgi.py",
            "use": "@vercel/python"
        },
        {
            "src": "build_files.sh",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "staticfiles"
            }
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "config/wsgi.py"
        }
    ],
    "env": {
        "DJANGO_SETTINGS_MODULE": "config.settings",
        "ALLOWED_HOSTS": ".vercel.app",
        "PYTHON_VERSION": "3.11"
    },
    "buildCommand": "chmod +x build_files.sh && ./build_files.sh"
} 